{% extends 'base.html.twig' %}

{% block title %}Rejestracja!{% endblock %}

{% block body %}
    {% block header %}
        {% set _route = app.request.get('_route') %}
        <div class="container-fluid">
            <div class="d-flex align-items-center justify-content-between">
                <a class="navbar-brand me-2" href="{{ path('homepage') }}">
                    <img src="{{ asset('images/logo.png') }}"/>
                </a>
            </div>
        </div>
    {% endblock %}
    {% set show_toolbar = false %}
    {% set show_profiler = false %}
    <section class="text-center">
        <div class="p-5 bg-image" style="
            background-image: linear-gradient(to bottom, #198754, #00CC66);
            height: 200px;
        "></div>
        <div class="card mx-4 mx-md-5 shadow-5-strong" style="
            margin-top: -150px;
            background: hsla(0, 0%, 100%, 1);
            backdrop-filter: blur(30px);
        ">
            <div class="card-body py-5 px-md-5">
                <div class="row d-flex justify-content-center">
                    <div class="col-lg-8">
                        {{ form_start(registrationForm) }}

                        <h2 class="fw-bold mb-5">Rejestracja</h2>

                        <div class="my-custom-class-for-errors">
                            {{ form_errors(registrationForm) }}
                        </div>

                        <div class="row">
                            <div class="col">
                                {{ form_row(registrationForm.username, {
                                    label: 'Login:'
                                }) }}
                            </div>
                            <div class="col">
                                {{ form_row(registrationForm.firstName, {
                                    label: 'Imię:'
                                }) }}
                            </div>
                            <div class="col">
                                {{ form_row(registrationForm.lastName, {
                                    label: 'Nazwisko:'
                                }) }}
                            </div>
                            <div class="col">
                                {{ form_row(registrationForm.plainPassword, {
                                    label: 'Hasło:'
                                }) }}
                            </div>
                            <div class="col">
                                {{ form_row(registrationForm.agreeTerms) }}
                            </div>
                        </div>

                        <div class="mb-4"></div>
                        <button class="btn btn-lg btn-success btn-block" type="submit">
                            Zarejestruj się
                        </button>

                        <a class="btn btn-lg btn-light btn-block" href="{{ path('login') }}" role="button">Zaloguj
                            się</a>

                        <a href="{{ path('homepage') }}" class="position-absolute top-0 end-0 mt-3 me-3"
                           style="font-size: 24px; color: #212529; text-decoration: none;">
                            &times;
                        </a>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
