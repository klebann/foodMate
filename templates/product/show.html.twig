    <h1>Produkt {{ product.id }}:</h1>
    <ul>
        <li>Nazwa: {{ product.name }}</li>
        <li>Opis: {{ product.description }}</li>
        <li>Jednostki: {{ product.unit }}</li>
    </ul>
{% endblock %}
