{% extends 'base.html.twig' %}

{% block title %}FoodMate - Lodówka{% endblock %}

{% block main %}
    <h1>Lodówka:</h1>

    <ul>
        {% for product in products %}
            <li>
                <a href="{{ path('product_show', {id: product.id} ) }}">{{ product.name }}</a>
                <p>{{ product.description }}</p>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
